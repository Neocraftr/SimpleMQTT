  ],
  "contact": {
    "homepage": "https://github.com/Neocraftr/SimpleMQTT",
    "sources": "https://github.com/Neocraftr/SimpleMQTT",
    "issues": "https://github.com/Neocraftr/SimpleMQTT/issues"
  },

